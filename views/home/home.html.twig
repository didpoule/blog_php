{% extends "front_template.html.twig" %}

{% block pageTitle %}La couverture{% endblock %}
{% block content %}
    <div class="row">
        <section>
            <div class="post-container">
                <article>
                    <h2>{{ edito.title }}</h2>
                    <p>{{ edito.content|raw }}</p>
                </article>

            </div>
        </section>
    </div>
    <div class="row">
        <section>
            <div class="post-container">
                {% if featured is not null %}
                    <article>
                        <h2 class="text-right">{{ featured.title }}</h2>
                        <p>{{ featured.content|raw }}</p>
                    </article>
                {% endif %}

                <div class="post-buttons">
                    <div class="read-more">
                        {% if featured.number == 0 %}
                            <button class="btn btn-primary" onclick="window.location = '/chapitres'">
                                Commencer la lecture
                            </button>
                        {% else %}
                            <button class="btn btn-primary"
                                    onclick="window.location = '/chapitres/chapitre-{{ featured.number }}#{{ featured.number }}'">
                                Continuer la lecture
                            </button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}
